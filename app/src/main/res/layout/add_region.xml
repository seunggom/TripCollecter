<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" android:orientation="vertical"
                                    app:cardBackgroundColor="@color/com_facebook_button_login_silver_background_color"
                                    app:cardCornerRadius="30dp">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="지역을 선택하세요"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView7"/>
        <Button
                android:text="지역 선택"
                android:layout_width="111dp"
                android:layout_height="wrap_content" android:id="@+id/button6"/>
        <Button
                android:text="사진 추가"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/button7"/>
        <ImageView
                android:layout_width="145dp"
                android:layout_height="130dp"
                android:id="@+id/imageView"/>
    </LinearLayout>
</android.support.v7.widget.CardView>
