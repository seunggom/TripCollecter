<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" android:orientation="vertical"
                                    app:cardBackgroundColor="@color/com_facebook_button_login_silver_background_color"
                                    app:cardCornerRadius="10dp">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="지역 이름"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/name" android:textSize="18sp"/>
        <ImageView
                android:layout_width="145dp"
                android:layout_height="130dp"
                android:id="@+id/imageView" android:background="@drawable/com_facebook_profile_picture_blank_portrait"/>
    </LinearLayout>
</android.support.v7.widget.CardView>
