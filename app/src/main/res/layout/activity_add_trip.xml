<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddTripActivity">

    <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/addTripName" app:layout_constraintTop_toTopOf="@+id/TripName"
            android:layout_marginTop="32dp" app:layout_constraintStart_toEndOf="@+id/TripName"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp"
            app:layout_constraintBottom_toBottomOf="@+id/TripName" app:layout_constraintVertical_bias="0.83"
            android:contentDescription="여행 제목을 입력하세요" android:hint="여행 제목을 입력하세요"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="48dp"
            android:layout_marginRight="48dp"/>
    <TextView
            android:text="여행 제목"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TripName"
            android:textSize="18sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="48dp" android:layout_marginStart="48dp" android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="여행 날짜"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TripDate" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/TripName" android:textSize="18sp"
            android:layout_marginStart="48dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="48dp"/>
    <TextView
            android:text="시작날짜 입력"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/startDate"
            android:clickable="true"
            android:focusable="true"
            android:textSize="18sp" app:layout_constraintStart_toEndOf="@+id/TripDate" android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/addTripName"/>
    <TextView
            android:text="종료날짜 입력"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/endDate"
            android:textSize="18sp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/addTripName" android:layout_marginEnd="48dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="48dp"/>
    <TextView
            android:text="~"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8" android:textSize="18sp" app:layout_constraintStart_toEndOf="@+id/startDate"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@+id/endDate" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" app:layout_constraintHorizontal_bias="0.481"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/addTripName"/>
</android.support.constraint.ConstraintLayout>