<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddTripActivity" android:id="@+id/scrollView4">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/constraint">

        <TextView
                android:text="여행 날짜"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TripDate"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="24dp" android:layout_marginStart="24dp" android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/addTripName"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/addTripName" app:layout_constraintTop_toTopOf="@+id/TripName"
                app:layout_constraintStart_toEndOf="@+id/TripName"
                app:layout_constraintBottom_toBottomOf="@+id/TripName" app:layout_constraintVertical_bias="0.38"
                android:contentDescription="여행 제목을 입력하세요" android:hint="여행 제목을 입력하세요"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.375" android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp" android:layout_marginLeft="32dp" android:layout_marginStart="32dp"/>
        <Button
                android:text="시작날짜 설정"
                android:layout_width="wrap_content"
                android:layout_height="33dp" android:id="@+id/button3"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                app:layout_constraintStart_toStartOf="@+id/textView3"
                app:layout_constraintEnd_toEndOf="@+id/textView3" android:textSize="10sp"
                android:layout_marginTop="8dp"/>
        <TextView
                android:text="여행 제목"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TripName"
                android:textSize="18sp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="24dp" android:layout_marginLeft="24dp" android:layout_marginStart="24dp"/>
        <TextView
                android:text="YYYY.MM.DD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView3"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/addTripName"
                app:layout_constraintStart_toEndOf="@+id/TripDate" android:layout_marginLeft="32dp"
                android:layout_marginStart="32dp" android:textSize="18sp"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/textView8"
                app:layout_constraintHorizontal_chainStyle="spread_inside"/>
        <TextView
                android:text="~"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView8" android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/textView3"
                android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/textView4"
                android:layout_marginEnd="16dp" android:layout_marginRight="16dp" android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/addTripName"/>
        <Button
                android:text="종료날짜 설정"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:id="@+id/button4" android:textSize="10sp"
                app:layout_constraintStart_toStartOf="@+id/textView4"
                app:layout_constraintEnd_toEndOf="@+id/textView4"
                app:layout_constraintTop_toBottomOf="@+id/textView4" android:layout_marginTop="8dp"/>
        <TextView
                android:text="YYYY.MM.DD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4" android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/addTripName" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="32dp" android:layout_marginRight="32dp" android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/textView8" app:layout_constraintHorizontal_bias="0.5"/>
        <View
                android:id="@+id/divider"
                android:layout_width="395dp"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/button3"
                android:layout_marginTop="16dp"/>
        <View
                android:id="@+id/divider2"
                android:layout_width="395dp"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mRecyclerView" android:layout_marginTop="16dp"/>
        <Button
                android:text="등록하기"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/button5" app:layout_constraintTop_toBottomOf="@+id/divider2"
                android:layout_marginTop="16dp" app:layout_constraintBottom_toBottomOf="parent"/>
        <android.support.v7.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mRecyclerView"
                app:layout_constraintTop_toBottomOf="@+id/divider"
                android:layout_marginTop="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>

    </android.support.constraint.ConstraintLayout>
</ScrollView>