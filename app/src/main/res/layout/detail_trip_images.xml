<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content" android:orientation="vertical"
                                             android:id="@+id/ConstraintLayout">

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/name1"
            android:textAlignment="center" tools:layout_conversion_absoluteHeight="0dp"
            tools:layout_conversion_absoluteWidth="411dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/name2"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintBottom_toBottomOf="@+id/name2"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name2" app:layout_constraintStart_toEndOf="@+id/name1"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:textAlignment="center"
            app:layout_constraintHorizontal_bias="0.0" android:textSize="18sp"/>
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_margin="3dp">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp" tools:srcCompat="@tools:sample/avatars"
                    android:id="@+id/imageView1" android:scaleType="centerCrop" android:visibility="gone"
                    android:layout_margin="2dp"/>
            <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp" tools:srcCompat="@tools:sample/avatars"
                    android:id="@+id/imageView2" android:scaleType="centerCrop" android:visibility="gone"
                    android:layout_margin="2dp"/>
            <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp" tools:srcCompat="@tools:sample/avatars"
                    android:id="@+id/imageView3" android:scaleType="centerCrop" android:visibility="gone"
                    android:layout_margin="2dp"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp" tools:srcCompat="@tools:sample/backgrounds/scenic"
                    android:id="@+id/imageView4" android:scaleType="centerCrop" android:visibility="gone"
                    android:layout_margin="2dp"/>
            <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp" tools:srcCompat="@tools:sample/backgrounds/scenic"
                    android:id="@+id/imageView5" android:scaleType="centerCrop" android:visibility="gone"
                    android:layout_margin="2dp"/>
            <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp" tools:srcCompat="@tools:sample/backgrounds/scenic"
                    android:id="@+id/imageView6" android:scaleType="centerCrop" android:visibility="gone"
                    android:layout_margin="2dp"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp" tools:srcCompat="@tools:sample/backgrounds/scenic"
                    android:id="@+id/imageView7" android:scaleType="centerCrop" android:visibility="gone"
                    android:layout_margin="2dp"/>
            <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp" tools:srcCompat="@tools:sample/backgrounds/scenic"
                    android:id="@+id/imageView8" android:scaleType="centerCrop" android:visibility="gone"
                    android:layout_margin="2dp"/>
            <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp" tools:srcCompat="@tools:sample/backgrounds/scenic"
                    android:id="@+id/imageView9" android:scaleType="centerCrop" android:visibility="gone"
                    android:layout_margin="2dp"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"/>
    </TableLayout>

</android.support.constraint.ConstraintLayout>