<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">
    <Spinner
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:id="@+id/spinner1" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:spinnerMode="dropdown"/>
    <TextView
            android:text="시/도 선택"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="@+id/spinner1"
            app:layout_constraintEnd_toEndOf="@+id/spinner1" app:layout_constraintTop_toBottomOf="@+id/divider3"
            android:layout_marginTop="16dp"/>
    <TextView
            android:text="시/군 선택"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/spinner2"
            app:layout_constraintEnd_toEndOf="@+id/spinner2" app:layout_constraintTop_toBottomOf="@+id/divider3"
            android:layout_marginTop="16dp"/>
    <Spinner
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:id="@+id/spinner2" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toEndOf="@+id/spinner1"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp" android:spinnerMode="dropdown"/>
    <Button
            android:text="사진추가하기"
            android:layout_width="111dp"
            android:layout_height="43dp"
            android:id="@+id/photoAddBtn" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout" android:layout_marginTop="16dp"/>
    <View
            android:id="@+id/divider3"
            android:layout_width="395dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"/>
    <View
            android:id="@+id/divider4"
            android:layout_width="395dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/spinner2"
            android:layout_marginTop="16dp"/>
    <TableLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:layout_constraintTop_toBottomOf="@+id/divider4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:id="@+id/tableLayout" android:layout_marginTop="8dp" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp">

        <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp" app:srcCompat="@drawable/com_facebook_tooltip_black_xout"
                    android:id="@+id/imageView1" android:scaleType="centerCrop" android:layout_margin="2dp"/>
            <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/imageView2" android:scaleType="centerCrop" android:layout_margin="2dp"
                    app:srcCompat="@drawable/com_facebook_tooltip_blue_xout"/>
            <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp" app:srcCompat="@drawable/com_facebook_tooltip_black_xout"
                    android:id="@+id/imageView3" android:scaleType="centerCrop" android:layout_margin="2dp"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp" app:srcCompat="@drawable/com_facebook_tooltip_blue_xout"
                    android:id="@+id/imageView4" android:scaleType="centerCrop" android:layout_margin="2dp"/>
            <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp" app:srcCompat="@drawable/com_facebook_tooltip_black_xout"
                    android:id="@+id/imageView5" android:scaleType="centerCrop" android:layout_margin="2dp"/>
            <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp" app:srcCompat="@drawable/com_facebook_tooltip_blue_xout"
                    android:id="@+id/imageView6" android:scaleType="centerCrop" android:layout_margin="2dp"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp" app:srcCompat="@drawable/com_facebook_tooltip_black_xout"
                    android:id="@+id/imageView7" android:scaleType="centerCrop" android:layout_margin="2dp"/>
            <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp" app:srcCompat="@drawable/com_facebook_tooltip_blue_xout"
                        android:id="@+id/imageView8" android:scaleType="centerCrop" android:layout_margin="2dp"/>
            <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp" app:srcCompat="@drawable/com_facebook_tooltip_black_xout"
                        android:id="@+id/imageView9" android:scaleType="centerCrop" android:layout_margin="2dp"/>
        </TableRow>
    </TableLayout>
</android.support.constraint.ConstraintLayout>