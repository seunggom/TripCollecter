<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" android:orientation="vertical"
                                    app:cardBackgroundColor="@color/com_facebook_button_login_silver_background_color"
                                    app:cardCornerRadius="10dp">

    <View
            android:id="@+id/divider7"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
    />
    <LinearLayout
        android:layout_width="match_parent"
              android:layout_height="wrap_content" android:orientation="horizontal"
>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="1">

            <TextView
                    android:text="YYYY.MM.DD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/startDate" android:layout_weight="1"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="8dp" android:layout_marginTop="7dp"/>
            <TextView
                    android:text="~"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView5_dtl" android:layout_weight="1"
                    app:layout_constraintStart_toEndOf="@+id/startDate" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="7dp" android:textSize="12sp"
                    android:layout_marginStart="8dp"/>
            <TextView
                    android:text="YYYY.MM.DD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/endDate" android:layout_weight="1"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@+id/textView5_dtl" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="7dp" android:layout_marginStart="8dp"/>
            <TextView
                    android:text="여행제목"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/tripTitle" android:layout_weight="1"
                    android:textSize="24sp"
                    app:layout_constraintTop_toBottomOf="@+id/startDate"
                    android:layout_marginTop="5dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/region" android:layout_weight="1"
                    app:layout_constraintTop_toBottomOf="@+id/tripTitle" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" android:layout_marginTop="5dp" android:textSize="14sp"
                    android:layout_marginBottom="7dp" app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
        <Button
                android:text="▶"
                android:layout_width="129dp"
                android:layout_height="match_parent" android:id="@+id/button2" android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:textSize="24sp"/>
    </LinearLayout>
</android.support.v7.widget.CardView>